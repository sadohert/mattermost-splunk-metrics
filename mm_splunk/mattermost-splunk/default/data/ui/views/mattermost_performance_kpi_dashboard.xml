          <query>| mstats rate(_value) prestats=true WHERE metric_name="mattermost_http_errors_total" AND `mattermost_metrics` sourcetype=prometheus:metric span=60s
| timechart rate(_value) span=60s</query>
          <earliest>$time_tok1.earliest$</earliest>
