<form theme="dark">
  <label>Performance KPI Metrics</label>
  <fieldset submitButton="false">
    <input type="time" token="time_tok1">
      <label></label>
      <default>
        <earliest>-6h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="multiselect" token="hosts" searchWhenChanged="true">
      <label>Select Hosts</label>
      <fieldForLabel>values(host)</fieldForLabel>
      <fieldForValue>values(host)</fieldForValue>
      <search>
        <query>| mcatalog values(host) WHERE `mattermost_metrics` sourcetype=prometheus:metric | mvexpand values(host)</query>
        <earliest>-7d@w0</earliest>
        <latest>now</latest>
      </search>
      <prefix>(</prefix>
      <valuePrefix>host ="</valuePrefix>
      <valueSuffix>"</valueSuffix>
      <delimiter> OR </delimiter>
      <suffix>)</suffix>
      <choice value="*">all</choice>
    </input>
  </fieldset>
  <row>
    <panel>
      <chart>
        <search>
          <query>| mstats max(_value) as cpu_seconds WHERE metric_name="mattermost_process_cpu_seconds_total" AND `mattermost_metrics` span=60s
| eval cpu_rate = cpu_seconds /100
| timechart max(cpu_rate) AS cpu span=60s</query>
          <earliest>$time_tok1.earliest$</earliest>
          <latest>$time_tok1.latest$</latest>
        </search>
        <option name="charting.chart">radialGauge</option>
        <option name="charting.chart.rangeValues">[0,30,70,100]</option>
        <option name="charting.chart.style">minimal</option>
        <option name="charting.gaugeColors">["0x53a051","0xf8be34","0xdc4e41"]</option>
        <option name="height">208</option>
        <option name="refresh.display">progressbar</option>
      </chart>
    </panel>
    <panel>
      <single>
        <title>Number of messages / min</title>
        <search>
          <query>| mstats rate(_value) prestats=true WHERE metric_name="mattermost_post_total" AND `mattermost_metrics` sourcetype=prometheus:metric span=10s
| timechart rate(_value) AS Avg span=10s
| fields - _span*
</query>
          <earliest>$time_tok1.earliest$</earliest>
          <latest>$time_tok1.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.size">small</option>
      </single>
    </panel>
    <panel>
      <single>
        <title>Number of API errors / min</title>
