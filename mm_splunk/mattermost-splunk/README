Example Index Configuration
# Simple example of a metrics index
# [mm_metrics]
# coldPath = $SPLUNK_DB/mm_metrics/colddb
# datatype = metric
# homePath = $SPLUNK_DB/mm_metrics/db
# maxTotalDataSizeMB = 512000
# thawedPath = $SPLUNK_DB/mm_metrics/thaweddb

Example Input Configuration for a single Mattermost cluster node
# URI = <mattermost server url>:<server port>/metrics
# insecureSkipVerify = 1
# interval = 15
# match = *
# sourcetype = prometheus:metric
# index = <metrics index>
# disabled = 0